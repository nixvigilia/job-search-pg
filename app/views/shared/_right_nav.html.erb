 <div class="items-center block w-full mt-2 text-center lg:flex lg:flex-row lg:flex-1 lg:mt-0 lg:text-left lg:justify-end">
 


    <% if user_signed_in? %>
        <%= link_to "Edit account", edit_user_registration_path, class: "block mt-4 lg:inline-block lg:mt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class:"block mt-4 lg:inline-block lg:mt-0 lg:mr-4 mb-2 lg:mb-0 link" %>
    <% else %>
        <%= link_to "Login / Register", new_user_session_path, class: "block mt-4 lg:inline-block lg:mt-0 lg:mr-4 mb-2 lg:mb-0 link py-4 px-10 border rounded-lg border-gray-400 hover:bg-indigo-600 hover:text-white hover:border-indigo-400" %>
    <% end %>

    <%= link_to "Employers / Post job", new_job_path, class: "btn text-white bg-indigo-600 py-4 px-10 hover:bg-purple-600 lg:mr-2 rounded-lg" %>
    
</div>

