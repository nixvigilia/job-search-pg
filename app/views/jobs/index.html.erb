

<div class="bg-white p-10 border mt-5">
<%= form_tag(jobs_path, :method => "get") do %>
    <div class="sm:flex items-center bg-white rounded-lg overflow-hidden py-1 justify-between max-w-2xl mx-auto">
        <%= search_field_tag :search, params[:search] , placeholder: "Job Title or Keyword", class: "form-control text-base text-gray-400 flex-grow border border-gray-400 px-2 outline-none rounded py-3"%>
        <div class="ms:flex items-center px-2 rounded-lg space-x-4 mx-auto ">
        <%= button_tag "Search", :class => "bg-indigo-600 rounded-md font-bold text-white px-6 py-3 transition duration-300 ease-in-out hover:bg-purple-600 mr-6", :name => nil %>
        </div>
      </div>
  <% end %>
</div>

<div id="jobs-index" class="container px-0 mx-auto lg:px-48 mt-5">
  <%= render @jobs %>
</div>